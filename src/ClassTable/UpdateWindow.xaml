<Window x:Class="UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassTable"
        mc:Ignorable="d"
        Title="软件更新" Height="172" Width="240">
    <Grid>
        <Label Content="当前版本：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label Content="最新版本：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <Button x:Name="Button_Update" Content="更新" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="147,112,0,0"/>
        <Label x:Name="Label_LocalVersion" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,10,0,0"/>
        <Label x:Name="Label_LatestVersion" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,40,0,0"/>
        <ProgressBar x:Name="ProgressBar_Download" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="212" Margin="10,87,0,0"/>
    </Grid>
</Window>
